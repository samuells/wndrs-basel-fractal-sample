{% if _target.context.theme %}
  {% set theme = _target.context.theme %}
{% else %}
  {% set theme = 'default' %}
{% endif %}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link media="all" rel="stylesheet" href="/css/styles.min.css">
  <script type='text/javascript' src="/js/modernizr.min.js"></script>
  <title>{{ _target.title }}</title>
</head>
<body class="theme--{{ theme }}">
  {{ yield }}

  <script type='text/javascript' src="/js/scripts.styleguide.min.js"></script>
  <script type='text/javascript' src="/js/scripts.all.min.js"></script>
</body>
</html>
